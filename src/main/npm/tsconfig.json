{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2018", "dom"],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true
  },
  "baseUrl": "src",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "rootDirs": [
    "src"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/@types"
  ],
  "outDir": "tsbuild"
}